# Server
PORT=8081
NODE_ENV=development
DEMO_MODE=false

# Database
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=stock_prediction_db

# Auth
JWT_SECRET=dev_jwt_secret_change_me
SESSION_SECRET=dev_session_secret_change_me
BCRYPT_ROUNDS=12

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
