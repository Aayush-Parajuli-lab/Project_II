# StockVision Pro - Information Sharing Platform Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=8081
NODE_ENV=development

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_mysql_password_here
DB_NAME=stock_prediction_db
DB_PORT=3306

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================
# Generate a secure JWT secret: openssl rand -hex 32
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters
SESSION_SECRET=your-super-secure-session-secret-key-here-minimum-32-characters

# ============================================================================
# EXTERNAL API KEYS (Optional)
# ============================================================================
# Ninja API for real-time stock quotes
NINJA_API_KEY=your_ninja_api_key_here

# Alpha Vantage for historical OHLC data
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# ============================================================================
# PLATFORM MODE SETTINGS
# ============================================================================
# Set to true to disable external API calls and use synthetic data
NO_EXTERNAL_APIS=false

# Set to true for full static mode (implies NO_EXTERNAL_APIS)
STATIC_MODE=false

# Demo mode for testing
DEMO_MODE=false

# ============================================================================
# CORS SETTINGS
# ============================================================================
# Frontend URLs allowed to access the API
CORS_ORIGIN_1=http://localhost:3000
CORS_ORIGIN_2=http://127.0.0.1:3000

# ============================================================================
# LOGGING & MONITORING
# ============================================================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true

# ============================================================================
# RATE LIMITING (Optional - for production)
# ============================================================================
# Maximum requests per hour per IP
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=3600000

# ============================================================================
# MACHINE LEARNING SETTINGS
# ============================================================================
# Random Forest configuration
RF_N_ESTIMATORS=100
RF_MAX_DEPTH=10
RF_MIN_SAMPLES_LEAF=1

# ============================================================================
# DATA GENERATION SETTINGS
# ============================================================================
# Default days for synthetic data generation
DEFAULT_HISTORICAL_DAYS=365
DEFAULT_PREDICTION_DAYS=30

# ============================================================================
# ADMIN SETTINGS
# ============================================================================
# Default admin credentials (change after first login)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@stockvision.com
DEFAULT_ADMIN_PASSWORD=admin123

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================
# Set to true in production
HTTPS_ENABLED=false
COOKIE_SECURE=false
SESSION_COOKIE_SECURE=false

# ============================================================================
# BACKUP & MAINTENANCE
# ============================================================================
# Enable automatic backups
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7

# ============================================================================
# NOTIFICATIONS (Optional)
# ============================================================================
# Email notifications for admin actions
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
ENABLE_EMAIL_NOTIFICATIONS=false