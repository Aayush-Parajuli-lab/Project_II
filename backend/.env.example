# Stock Prediction App - Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=8081
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=stock_prediction_db
DB_PORT=3306

# API Keys (Optional - for future features)
# YAHOO_FINANCE_API_KEY=your_api_key_here
# ALPHA_VANTAGE_API_KEY=your_api_key_here

# Security (for future authentication features)
# JWT_SECRET=your_jwt_secret_here
# SESSION_SECRET=your_session_secret_here

# Logging
LOG_LEVEL=info

# Cron Jobs (for scheduled data updates)
ENABLE_SCHEDULED_UPDATES=true

# Comments:
# - Leave DB_PASSWORD empty if MySQL has no password
# - API keys are optional for basic functionality
# - JWT secrets will be used when authentication is implemented
# - Set ENABLE_SCHEDULED_UPDATES=false to disable automatic data fetching