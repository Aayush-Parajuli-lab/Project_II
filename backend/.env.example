# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=stock_prediction

# Server Configuration
PORT=8081
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-session-secret-key-here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Ninja API Configuration
NINJA_API_KEY=
# Leave blank as requested - you can add your API key from https://api.api-ninjas.com/

# Security Configuration
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info

# Cron Jobs (for scheduled data updates)
ENABLE_SCHEDULED_UPDATES=true

# Comments:
# - Leave DB_PASSWORD empty if MySQL has no password
# - API keys are optional for basic functionality
# - JWT secrets will be used when authentication is implemented
# - Set ENABLE_SCHEDULED_UPDATES=false to disable automatic data fetching